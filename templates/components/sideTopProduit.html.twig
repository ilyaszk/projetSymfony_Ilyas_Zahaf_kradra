<div class="col-md-2" style="padding: 0 10px 0 10px;">
    <div class="card">
        <div class="card-header text-center">
            <h4><i class="fas fa-star"></i> Top Ventes <i class="fas fa-star"></i></h4>
        </div>
        <div class="card-body">
            <ul class="list-group">
                {% for produit in topProduits %}
                    <a href="{{ path('produits', {'idCategorie': produit.categorie}) }}">
                        <li class="list-group-item text-center clickable">
                            <img src="{{ asset( produit.visuel) }}" style="height: 40px;"/>
                            <p>{{ produit.libelle }}<br><i>{{ produit.quantite }} Ventes</i></p>
                        </li>
                    </a>
                {% endfor %}
            </ul>
        </div>
    </div>

</div>
