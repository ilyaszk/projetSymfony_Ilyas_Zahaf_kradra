{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    {% include 'components/navbar.html.twig' %}
    <main role="main" class="container-fluid" style="margin-top: 4%; width: 90%">
        <div class="row">
            <div class="col-md-10">
                <div class="main-div">
                    <!-- debut du block body -->
                    <div class="card col-md-12">
                        <div class="card-header">
                            <h1><i class="fas fa-home"></i> Démo Symfony</h1>
                        </div>
                        <div class="card-body">
                            <div class="card clickable" onclick="location = '{{ path('boutique') }}';">
